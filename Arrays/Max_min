    <script>
      let size = prompt("Enter the size of the array:");
      let arr = [];
      for (let i = 0; i < size; i++) {
        arr.push(prompt("Enter the element"));
      }
      console.log(Number(arr[0]) + Number(arr[size - 1]));
    </script>
